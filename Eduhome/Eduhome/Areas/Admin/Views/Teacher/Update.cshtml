
@model Teacher;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Teacher" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Position" class="form-label">Position</label>
                    <input class="form-control" asp-for="@Model.Position">
                    <span asp-validation-for="@Model.Position" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">Content</label>
                    <textarea id="editor" class="form-control" asp-for="@Model.About" style="height:300px"></textarea>
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Degree" class="form-label">Degree</label>
                    <input class="form-control" asp-for="@Model.Degree">
                    <span asp-validation-for="@Model.Degree" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Experience" class="form-label">Experience</label>
                    <input class="form-control" asp-for="@Model.Experience">
                    <span asp-validation-for="@Model.Experience" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Faculty" class="form-label">Faculty</label>
                    <input class="form-control" asp-for="@Model.Faculty">
                    <span asp-validation-for="@Model.Faculty" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Mail" class="form-label">Mail</label>
                    <input class="form-control" asp-for="@Model.Mail">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="@Model.Phone">
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Skype" class="form-label">Skype</label>
                    <input class="form-control" asp-for="@Model.Skype">
                    <span asp-validation-for="@Model.Skype" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Teacher_Hobbies_Id" class="form-label ">Hobbies</label>
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.Teacher_Hobbies_Id">
                        @foreach (var item in ViewBag.Hobbies)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                    <span asp-validation-for="@Model.Teacher_Hobbies_Id" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="@Model.Id" />
                <input type="hidden" asp-for="@Model.Image" />


                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Teacher" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
