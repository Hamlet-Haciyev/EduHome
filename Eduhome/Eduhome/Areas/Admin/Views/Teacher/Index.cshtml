@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Teacher>

<div class="container" style="overflow:auto;">
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Teacher" asp-action="Create">Create</a>
        </div>
        <hr />      

        <div class="col-lg-12 mt-3">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Position</th>
                        <th scope="col">About</th>
                        <th scope="col">Degree</th>
                        <th scope="col">Experience</th>
                        <th scope="col">Faculty</th>
                        <th scope="col">Mail</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Skype</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 1;
                        @foreach (var item in Model)
                        {
                    <tr style="max-width:100%;">
                        <th scope="row">@i</th>
                        <td><img src="~/Uploads/@item.Image" alt="Alternate Text" style="width:150px; max-height:150px;" /></td>
                        <td>@item.Name</td>
                        <td>@item.Position</td>
                        <td>@Html.Raw(item.About != null && item.About.Length > 50 ? item.About.Substring(0, 50) : item.About)</td>
                        <td>@item.Degree</td>
                        <td>@item.Experience</td>
                        <td>@item.Faculty</td>
                        <td>@item.Mail</td>
                        <td>@item.Phone</td>
                        <td>@item.Skype</td>
                        <td>
                            <a class="btn btn-success" asp-area="Admin" asp-controller="Teacher" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Teacher" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>
                    </tr>
                            i++;
                        }

                    }

                </tbody>
            
             </table>

        </div>
    </div>
</div>